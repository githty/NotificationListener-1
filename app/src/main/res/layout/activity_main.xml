<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.xiaom.notificationlistener.MainActivity" android:id="@+id/listener"
        tools:layout_editor_absoluteY="81dp">

    <Switch
            android:text="开启通知栏监听"
            android:layout_width="325dp"
            android:id="@+id/Test" android:textSize="18sp"
            tools:ignore="DuplicateIds"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="17dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp" android:layout_marginEnd="33dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="请输入过滤字段："
            android:layout_width="128dp"
            android:layout_height="28dp"
            android:id="@+id/textView"
            android:textSize="16sp"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp" android:layout_marginEnd="230dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/filtration"/>
    <EditText
            android:layout_width="335dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/filtration"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp" android:layout_marginEnd="23dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <CheckBox
            android:text="监听短信"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/Test" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp" android:layout_marginEnd="270dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>
